# Production Environment Variables for Render
# Copy these to your Render environment variables

# Database Configuration (MongoDB Atlas recommended for free tier)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/auto_bpmn?retryWrites=true&w=majority

# Server Configuration
NODE_ENV=production
PORT=10000

# Security (Generate a secure JWT secret)
JWT_SECRET=your_super_secure_jwt_secret_at_least_32_characters_long

# AI API Keys
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Client Configuration (Update with your Vercel URL)
CLIENT_URL=https://your-vercel-app-name.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
